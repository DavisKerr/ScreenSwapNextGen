<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/Canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:src="@drawable/gamewindow" />

    <Button
        android:id="@+id/UpButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Canvas"
        android:layout_centerHorizontal="true"
        android:text="@string/up" />

    <Button
        android:id="@+id/DownButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LeftButton"
        android:layout_centerHorizontal="true"
        android:text="@string/down" />

    <Button
        android:id="@+id/LeftButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpButton"
        android:layout_toLeftOf="@+id/UpButton"
        android:text="@string/left" />

    <Button
        android:id="@+id/RightButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpButton"
        android:layout_toRightOf="@+id/UpButton"
        android:text="@string/right" />

    <ImageView
        android:id="@+id/Player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Canvas"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/player1" />

</RelativeLayout>
